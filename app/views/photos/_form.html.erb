<section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Photo</h2>
                        <%= form_with(model: photo, local: true) do |form| %>
                          <div class="field">
                          <%= form.text_field :name, placeholder: "photo name" %>
                          </div>

                          <div class="field">
                            <%= form.file_field :image, direct_upload: true %>
                          </div>

                          <div class="actions form-group form-button" >
                            <%= form.submit class: "form-submit" %>
                          </div>
                        <% end %>
                        </div>
                    <div class="signup-image">
                        <figure><%= image_tag 'signup-image.jpg' %></figure>
                        <%= link_to "Cancel", root_path, class: "signup-image-link"%>
                    </div>
                </div>
            </div>
        </section>
